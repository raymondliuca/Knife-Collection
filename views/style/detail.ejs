<h1><%= style.name %></h1>
<div class="deleteAndEdit" >
    <a href='/style/<%= style.id %>/delete'> Delete </a>
    <a href='/style/<%= style.id %>/edit'> Edit </a>
</div>

<div class="container">
    <div class="row">
        <% knifes.forEach(function(knife) { %>
            <div class="col">
                <div class="card">
                    <div class="card_img img_size">
                        <img calss="img_size" src="<%= knife.picture %>" >
                    </div>
                    <div class="name">
                        <a href="/knife/<%= knife.id %>">
                            <%= knife.description %>
                        </a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div> 
